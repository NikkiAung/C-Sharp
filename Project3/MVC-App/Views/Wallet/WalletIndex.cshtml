@model List<WalletModel>
@{
    int count = 0;
    bool isSuccess = Convert.ToBoolean(TempData["IsSuccess"] ?? false);
    string message = Convert.ToString(TempData["Message"] ?? string.Empty);
}

<h1>Wallet Users (@Model.Count)</h1>

@if(!string.IsNullOrEmpty(message))
{
   if(isSuccess)
   {
       <div class="alert alert-success" role="alert">
           A simple success alert—check it out!
       </div>
   }
   else
   {
       <div class="alert alert-danger" role="alert">
           A simple danger alert—check it out!
       </div>
   }
}

<a class="btn btn-outline-success" href="/Wallet/Create">Create</a>

<table class="table table-responsive">
    <thead>
        <tr>    
            <th>Action</th>
            <th>No.</th>
            <th>User Name</th>
            <th>Mobile No</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {   
            <tr>
                <td>
                    <a href="/Wallet/Edit?walletId=@item.WalletId" class="btn btn-outline-warning">Edit</a>
                    <a href="/Wallet/Delete?walletId=@item.WalletId" class="btn btn-outline-danger">Delete</a>
                </td>
                <td>@(count++)</td>
                <td>@item.WalletUserName</td>
                <td>@item.MobileNo</td>
            </tr>
        }
    </tbody>
</table>
