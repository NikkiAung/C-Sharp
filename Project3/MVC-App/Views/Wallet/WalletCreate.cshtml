@{
    ViewData["WalletUserName"] = "New Wallet";
    ViewData["Test"] = "heehee";
}

<h1>New Wallet</h1>

<form action="/Wallet/Save" method="post">
    <div class="mb-3">
        <label for="txtWalletUserName" class="form-label">WalletUserName</label>
        <input type="text" class="form-control" name="WalletUserName" id="txtWalletUserName">
    </div>

    <div class="mb-3">
        <label for="txtFullName" class="form-label">FullName</label>
        <input type="text" class="form-control" name="FullName" id="txtFullName">
    </div>

    <div class="mb-3">
        <label for="txtMobileNo" class="form-label">MobileNo</label>
        <input type="text" class="form-control" name="MobileNo" id="txtMobileNo">
    </div>

    <div class="mb-3">
        <label for="txtBalance" class="form-label">Balance</label>
        <input type="text" class="form-control" name="Balance" id="txtBalance">
    </div>

    <div class="mb-3">
        <button type="button" class="btn btn-secondary">Cancel</button>
        <button type="submit" class="btn btn-success" id="btnSave">Save</button>
    </div>
</form>
